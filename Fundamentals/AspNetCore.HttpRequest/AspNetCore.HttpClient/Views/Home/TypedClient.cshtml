@namespace AspNetCore.HttpClient.GitHub
@model TypeClientModel
@{
    ViewData["Title"] = "Latest GitHub Issues for ASP.NET Docs";
}
<h1>@ViewData["Title"]</h1>

@if (Model.GetIssuesError)
{
    <p>nable to get issues from GitHub. Please try again later.</p>
}
else if (Model.HasIssue)
{
    @foreach (var githubIssue in Model.LatestIssues)
    {
        <h2>@githubIssue.Title</h2>
        <p><a href="@githubIssue.Url">View Issue</a></p>
    }
}
else
{
    <p>No issues found.</p>
}