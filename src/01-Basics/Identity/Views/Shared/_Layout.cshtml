@{
    ViewData["Title"] = "Dashboard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/_Layout.cshtml.css" rel="stylesheet" />
</head>
<body>
    <div class="layout">
        <!-- Sidebar -->
        <nav class="sidebar d-flex flex-column">
            <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/" ? "active" : "")" href="/"><i class="bi bi-house-door"></i>Home</a>
            <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/Account/Login" ? "active" : "")" href="/Account/Login"><i class="bi bi-door-open-fill me-2"></i>Login</a>
            <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/Admin/Index" ? "active" : "")" href="/Admin/Index"><i class="bi bi-shield-lock-fill me-2"></i>Admin</a>
            <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/Role/Index" ? "active" : "")" href="/Role/Index"><i class="bi bi-people-fill me-2"></i>Roles</a>
            <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/Claims/Index" ? "active" : "")" href="/Claims/Index"><i class="bi bi-check-circle-fill me-2"></i>Claims</a>
        </nav>
        <!-- Main Content -->
        <div class="main d-flex flex-column">
            <!-- Top nav -->
            <nav class="navbar navbar-light shadow-sm px-4">
                <div class="container-fluid justify-content-end">
                    <a class="nav-link text-primary" href="/About">About</a>
                </div>
            </nav>
            <!-- Page Content -->
            <main class="p-4">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
