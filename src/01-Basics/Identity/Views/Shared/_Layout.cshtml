@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap & FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        /* 全局背景 */
        body {
            background-color: #f4f7fc;
            font-family: 'Arial', sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* 让页面至少撑满整个视口 */
        }

        /* 侧边栏 */
        .sidebar {
            height: 100vh;
            width: 260px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #ffffff; /* 白色背景 */
            color: #333;
            padding-top: 20px;
            box-shadow: 3px 0 10px rgba(0, 0, 0, 0.1);
        }

        .sidebar h4 {
            text-align: center;
            font-weight: bold;
            margin-bottom: 20px;
            color: #333;
        }

        .sidebar a {
            color: #495057;
            text-decoration: none;
            padding: 12px 20px;
            display: flex;
            align-items: center;
            font-size: 16px;
            transition: all 0.3s ease;
        }

        .sidebar a i {
            margin-right: 10px;
        }

        .sidebar a:hover {
            background-color: #e9ecef;
            color: #212529;
            padding-left: 25px;
            border-radius: 5px;
        }

        .sidebar hr {
            border-top: 1px solid #dee2e6;
        }

        /* 主内容区域 */
        .content {
            flex: 1;
            display: flex;
            flex-direction: column;
            margin-left: 260px;
            padding: 20px;
        }

        /* 顶部导航栏 */
        .navbar {
            border-radius: 8px;
            padding: 10px 20px;
            background-color: #fff;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 20px;
        }

        /* 页脚 */
        .footer {
            width: 100%;
            background-color: #fff;
            padding: 10px 0;
            box-shadow: 0px -2px 4px rgba(0, 0, 0, 0.1);
            text-align: center;
            margin-top: auto; /* 关键点：让footer始终固定在底部 */
        }

        .footer span {
            color: #6c757d;
            font-size: 14px;
        }

        
    </style>
</head>
<body>

    <!-- 侧边栏 -->
    <div class="sidebar">
        <a href="/"><i class="fas fa-home"></i> Home</a>
        <a href="/Account/Login"><i class="fas fa-sign-in-alt"></i> Login</a>
        <a href="/Admin/Index"><i class="fas fa-user-shield"></i> Admin</a>
        <a href="/Role/Index"><i class="fas fa-users"></i> Roles</a>
        <a href="/Claims/Index"><i class="fas fa-id-badge"></i> Claims</a>
    </div>
    <!-- 主内容区域 -->
    <div class="content">
        <!-- 顶部导航栏 -->
        <header class="mb-4">
            <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
                <div class="container-fluid">
                    <span class="navbar-brand">ASP.NET Core Identity</span>
                </div>
            </nav>
        </header>
        <!-- 主要内容 -->
        <main>
            @RenderBody()
        </main>

        <!-- 页脚 -->
        <footer class="footer mt-auto py-3">
            <div class="container">
                <span>© 2023 Your Company | All Rights Reserved</span>
            </div>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
