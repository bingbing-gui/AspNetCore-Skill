@{
    ViewData["Title"] = "Dashboard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        
    body, html {
        height: 100%;
        margin: 0;
    }
    .layout {
        display: flex;
        height: 100vh;
        overflow: hidden;
    }
    .sidebar {
        width: 250px;
        background:#343a40;
        padding-top: 20px;
        flex-shrink: 0;
        border-right: 1px solid #dee2e6;
    }
    .sidebar .nav-link {
        color: #c2c7d0;
        padding: 12px 20px;
        display: flex;
        align-items: center;
        font-weight: 500;
        margin: 2px 4px; 
        transition: all 0.3s ease; /* Smooth transition for hover effects */
    }
    .sidebar .nav-link:hover {
        background-color: #4b545c;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
        border-radius: 0.5rem;
    }
    .sidebar .nav-link.active {
        background-color: #007bff;
        color: #ffffff;
        box-shadow: 0 2px 8px rgba(0, 123, 255, 0.4); /* 蓝色柔光 */
        border-radius: 0.5rem;
    }
    .sidebar .nav-link i {
        margin-right: 10px;
    }
    .main {
        flex-grow: 1;
        overflow-y: auto;
        background-color: #f8f9fa;
    }
    .navbar {
        background-color: #f8f9fa;
    }
    .navbar .nav-link {
        color: #007bff;
        font-weight: 500;
        margin-left: 20px;
    }
    </style>
</head>
<body>
    <div class="layout">
        <!-- Sidebar -->
        <nav class="sidebar d-flex flex-column">
            <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/" ? "active" : "")" href="/"><i class="bi bi-house-door"></i>主页</a>
            <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/AISearch/Index" ? "active" : "")" href="/AISearch/Index"><i class="bi bi-search-heart me-2"></i>搜索服务</a>
            <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/ContentSafety/Index" ? "active" : "")" href="/ContentSafety/Index"><i class="bi bi-shield-check me-2"></i>内容安全审查</a>
            <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/LanguageService/Index" ? "active" : "")" href="/LanguageService/Index"><i class="bi bi-translate fs-5 me-2"></i>语言服务</a>
            <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/SpeechService/Index" ? "active" : "")" href="/SpeechService/Index"><i class="bi bi-mic-fill me-2"></i>语音服务</a>
            <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/NaturalLanguage/Index" ? "active" : "")" href="/NaturalLanguage/Index"><i class="bi bi-chat-text-fill me-2"></i>自然语言</a>
            <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/KnowledgeMining/Index" ? "active" : "")" href="/KnowledgeMining/Index"><i class="bi bi-lightbulb-fill me-2"></i>知识挖掘</a>
            <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/Vision/Index" ? "active" : "")" href="/Vision/Index"><i class="bi bi-eye-fill me-2"></i>计算机视觉</a>
            <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/DocumentIntelligence/Index" ? "active" : "")" href="/DocumentIntelligence/Index"><i class="bi bi-file-earmark-text-fill me-2"></i>智能文档</a>
            <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/GenerativeAI/Index" ? "active" : "")" href="/GenerativeAI/Index"><i class="bi bi-stars me-2"></i>生成式AI</a>
        </nav>
        <!-- Main Content -->
        <div class="main d-flex flex-column">
            <!-- Top nav -->
            <nav class="navbar navbar-light shadow-sm px-4">
                <div class="container-fluid justify-content-end">
                    <a class="nav-link text-primary" href="/About">About</a>
                </div>
            </nav>
            <!-- Page Content -->
            <main class="p-4">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
