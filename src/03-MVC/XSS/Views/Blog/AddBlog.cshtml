@model Blog
@{
    ViewData["Title"] = "新增博客";
}
<form class="form-horizontal" role="form" method="post">
    <div class="mb-3 row">
        <label asp-for="Title" class="col-sm-1 control-label"></label>
        <div class="col-sm-11">
            <input asp-for="Title" class="form-control" />
        </div>
    </div>
    <div class="mb-3 row">
        <label asp-for="Body" class="col-sm-1 control-label"></label>
        <div class="col-sm-11">
            <input asp-for="Body" class="form-control" />
        </div>
    </div>
    <div class="mb-3 row">
        <label asp-for="CreateTime" class="col-sm-1 control-label"></label>
        <div class="col-sm-11">
            <input asp-for="CreateTime" class="form-control" />
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-sm-11 offset-sm-1">
            <button type="submit" class="btn btn-primary">保存</button>
            <button asp-action="Index" class="btn btn-secondary">
                返回
            </button>
        </div>
    </div>
</form>