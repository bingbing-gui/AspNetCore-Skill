@{
    ViewData["Title"] = "部门数据";
}
@model IEnumerable<Department>

<div class="container">
    <div class="row mb-3">
        <div class="col-sm-3">
            <a asp-action="Create" class="btn btn-secondary">新增</a>
        </div>
        <div class="col-sm-3"></div>
        <div class="col-sm-3"></div>
        <div class="col-sm-3"></div>
    </div>
    <div class="row mb-3">
        <div class="col-sm">
            <table class="table table-bordered align-middle">
                <thead>
                    <tr>
                        <th>编号</th>
                        <th>名称</th>
                    </tr>
                </thead>
                <tbody>
                     @foreach (Department dept in Model)
                    {
                        <tr>
                            <td>@dept.Id</td>
                            <td>@dept.Name</td>
                        </tr>
                    }                    
                </tbody>
            </table>
        </div>
    </div>
</div>
